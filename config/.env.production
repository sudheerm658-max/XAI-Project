# Production Environment Configuration

# Application
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
CORS_ORIGINS=["https://example.com"]

# Database (PostgreSQL recommended for production)
DATABASE_URL=postgresql://user:password@postgres:5432/grok_insights
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Grok
GROK_MODE=real
GROK_API_KEY=xai-your-key-here  # Use AWS Secrets Manager or environment variable in production
GROK_API_BASE_URL=https://api.x.ai/v1
GROK_COST_PER_1K=0.002

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Processing
MIN_BATCH_SIZE=5
MAX_BATCH_SIZE=100
START_BATCH_SIZE=20
QUEUE_FLUSH_TIMEOUT_SECONDS=2.0

# Resilience
ERROR_THRESHOLD=5
CIRCUIT_BREAKER_COOLDOWN_SECONDS=30
BACKPRESSURE_QUEUE_THRESHOLD=5000

# Optimization
ENABLE_CHEAP_PREFILTER=true
ENABLE_CACHING=true
ENABLE_PROMETHEUS_METRICS=true