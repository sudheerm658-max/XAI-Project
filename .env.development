# Development Environment Configuration

# Application
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]

# Database
DATABASE_URL=sqlite:///./data/data.db
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5

# Grok
GROK_MODE=real          # mock or real
GROK_API_KEY=xai-your-key-here  # Never commit real keys - use .env instead
GROK_COST_PER_1K=0.002

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=120
RATE_LIMIT_WINDOW_SECONDS=60

# Processing
MIN_BATCH_SIZE=1
MAX_BATCH_SIZE=20
START_BATCH_SIZE=5
QUEUE_FLUSH_TIMEOUT_SECONDS=1.0

# Resilience
ERROR_THRESHOLD=3
CIRCUIT_BREAKER_COOLDOWN_SECONDS=5
BACKPRESSURE_QUEUE_THRESHOLD=500

# Optimization
ENABLE_CHEAP_PREFILTER=true
ENABLE_CACHING=true
ENABLE_PROMETHEUS_METRICS=true